doctype html
html(lang="en")
  head
    title Tiny Fighter
    link(href='css/index.css', media='screen', rel='stylesheet', type='text/css')
    script(src='lib/jquery-1.10.2.min.js')
    script(src='lib/socket.io.min.js')
    script(type='text/javascript', src='lib/easeljs-0.6.1.min.js')
    script(type='text/javascript', src='lib/tweenjs-0.5.1.min.js')
    script(type='text/javascript', src='js/world.js')
    script(type='text/javascript', src='js/constants.js')
    script(type='text/javascript', src='js/object.js')
    script(type='text/javascript', src='js/character.js')
    script(type='text/javascript', src='js/game.js')
    script(type='text/javascript', src='js/magic.js')
    //
       Bootstrap 
    script(src='lib/bootstrap.min.js')
    link(href='css/bootstrap.min.css', rel='stylesheet', media='screen')
    script(type='text/javascript').
      function init() {
        var game = new Game()
        game.id = !{id}
        game.username = !{name}
        game.init()
      }
  body(onload='init()')
    #GameArea
      #hud.container
        .row.clearfix
          block profile1
          block profile2
          block profile3
          block profile4
      canvas#gameCanvas(width='800', height='550')
        h1 Sorry your browser does not support html5 canvas
